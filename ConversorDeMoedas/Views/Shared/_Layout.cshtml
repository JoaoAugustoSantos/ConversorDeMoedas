<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conversor de Moedas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: #007bff;
            color: #fff;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .converter-container {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            text-align: center;
        }

        label {
            font-weight: bold;
            display: block;
            text-align: left;
            margin-bottom: 0.5rem;
        }

        select, input {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: none;
            border-radius: 8px;
        }

        button {
            width: 100%;
            background-color: #0056b3;
            color: #fff;
            border: none;
            padding: 0.7rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
        }

            button:hover {
                background-color: #004494;
            }

        p {
            text-align: center;
            font-weight: bold;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="converter-container">
        @RenderBody()
    </div>
</body>
</html>
