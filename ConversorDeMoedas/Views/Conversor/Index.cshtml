@model ConversorDeMoedas.Models.ConversorModel

@{
    ViewData["Title"] = "Conversor de Moedas";
}

<div style="padding:30px; border-radius:16px; width:100%; max-width:400px; text-align:center;">
    <div style="background-color:#f8f9fa; color:#000; padding:30px; border-radius:16px; box-shadow:0 4px 20px rgba(0,0,0,0.2); width:100%; max-width:400px; text-align:center;">
        <h1 style="margin-bottom:25px;">💲 Conversor de Moedas</h1>

        <form asp-action="Index" method="post">
            <div style="margin-bottom:15px; text-align:left;">
                <label style="display:block; font-weight:bold;">Moeda de origem</label>
                <select asp-for="FromCurrency" class="form-select text-center" style="border-radius:8px; padding:8px;">
                    <option>USD</option>
                    <option>BRL</option>
                    <option>EUR</option>
                    <option>JPY</option>
                    <option>GBP</option>
                    <option>AUD</option>
                </select>
            </div>

            <div style="margin-bottom:15px; text-align:left;">
                <label style="display:block; font-weight:bold;">Moeda de destino</label>
                <select asp-for="TargetCurrency" class="form-select text-center" style="border-radius:8px; padding:8px;">
                    <option>USD</option>
                    <option>BRL</option>
                    <option>EUR</option>
                    <option>JPY</option>
                    <option>GBP</option>
                    <option>AUD</option>
                </select>
            </div>

            <div style="margin-bottom:15px; text-align:left;">
                <label style="display:block; font-weight:bold;">Valor</label>
                <input asp-for="Value" type="number" step="0.01" class="form-control text-center" style="border-radius:8px; padding:8px;" placeholder="Digite o valor" />
            </div>

            <button type="submit" class="btn btn-primary" style="border-radius:8px; font-weight:bold; width:100%; margin-top:10px;">
                Converter
            </button>
        </form>

        @if (Model.Result != null)
        {
            <div style="margin-top:25px; padding:15px; border-radius:10px; background-color:#e9ecef;">
                <h4>Resultado</h4>
                <p style="font-size:20px; font-weight:bold;">
                    @Model.Value @Model.FromCurrency = @Model.Result.Value.ToString("F2") @Model.TargetCurrency
                </p>
            </div>
        }
    </div>
</div>
