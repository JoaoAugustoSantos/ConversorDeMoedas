@{
}
@model ConversorDeMoedas.Models.ConversorModel

<form asp-action="Index" method="post">
    <label>From Currency:</label>
    <select asp-for="FromCurrency">
        <option>USD</option>
        <option>BRL</option>
        <option>EUR</option>
        <!-- adicionar outras moedas -->
    </select>

    <label>Target Currency:</label>
    <select asp-for="TargetCurrency">
        <option>USD</option>
        <option>BRL</option>
        <option>EUR</option>
        <!-- adicionar outras moedas -->
    </select>

    <label>Value:</label>
    <input asp-for="Value" type="number" step="0.01" />

    <button type="submit">Convert</button>
</form>

@if (Model.Result != null)
{
    <p>Result: @Model.Result</p>
}
